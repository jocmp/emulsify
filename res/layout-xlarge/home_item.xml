<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:text="Start Camera"
            android:id="@+id/camera"
            android:layout_alignParentTop="true" android:layout_alignLeft="@+id/galleryIn"
            android:layout_marginTop="420dp" android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:text="Launch Gallery"
            android:id="@+id/galleryIn" android:layout_below="@+id/camera" android:layout_centerHorizontal="true"/>
</RelativeLayout>