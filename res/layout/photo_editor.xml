<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/pictureScrollView" android:layout_above="@+id/horizontalScrollView"
            android:layout_marginRight="5dp" android:background="#000000" android:fillViewport="false">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/pictureLinearLayout">
        </LinearLayout>
    </ScrollView>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/Picture" android:layout_above="@+id/horizontalScrollView"
            android:background="#000000" android:layout_toRightOf="@+id/pictureScrollView"
            android:layout_alignParentRight="false"/>
    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/filterScrollHeight"
            android:id="@+id/horizontalScrollView" android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:background="#000000" android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" android:layout_toRightOf="@+id/pictureScrollView">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/linearLayout">
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>